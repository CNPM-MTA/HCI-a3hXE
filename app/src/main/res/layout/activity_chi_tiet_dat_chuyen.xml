<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    tools:context="cnpm.com.xe.activities.ChiTietDatChuyenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:typeface="serif"
            android:text="Điểm đón:"
            android:textColor="#444"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/diemdon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:inputType="text"
            android:maxLines="1"
            android:typeface="serif"
            android:scrollHorizontally="true"
            android:text="số 236 Hoàng Quốc Việt Cầu Giấy Hà Nội"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:typeface="serif"
            android:text="Điểm đến:"
            android:textColor="#444"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/diemden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:inputType="text"
            android:maxLines="1"
            android:typeface="serif"
            android:scrollHorizontally="true"
            android:text="Bưu điện tỉnh Ninh Bình Phường Bích Đào Tp Ninh Bình"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Số lượng: "
            android:textColor="#444"
            android:typeface="serif"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/soluong"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:typeface="serif"
            android:text="1"
            android:textColor="#444" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:text="Giá   :"
            android:textSize="18sp"
            android:textColor="#444" />

        <TextView
            android:id="@+id/gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:text="150000 VNĐ"
            android:textColor="#ff3a3a"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text=" VNĐ"-->
        <!--android:textSize="18sp"-->
        <!--android:textStyle="bold" />-->

        <TextView
            android:id="@+id/khoangcach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="100"
            android:typeface="serif"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=" Km"
            android:typeface="serif"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Thời gian đi: "
            android:typeface="serif"
            android:textSize="18sp"
            android:textColor="#444" />

        <!--<CalendarView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent">-->
        <!---->
        <!--</CalendarView>-->

        <TextView
            android:id="@+id/ngaydi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:typeface="serif"
            android:layout_weight="1"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:inputType="date"
            android:text="17/5/2017"
            android:layerType="hardware"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/curPosition"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#fff"
            android:src="@drawable/car1" />

        <TextView
            android:id="@+id/loaixe"
            android:layout_width="wrap_content"
            android:typeface="serif"
            android:layout_height="wrap_content"
            android:text="Xe 4 chỗ"
            android:textSize="18sp"
            android:textColor="#444"/>
    </LinearLayout>

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="0dp"
        android:layout_weight="1" >
        <RadioButton
            android:id="@+id/motchieu"
            android:checked="true"
            android:text="Một chiều"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/khuhoi"
            android:text="Khứ hồi"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </RadioGroup>

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_gravity="bottom"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:layout_weight="1"-->
        <!--android:gravity="center_vertical"-->
        <!--android:orientation="horizontal">-->

        <!--<CheckBox-->
            <!--android:id="@+id/motchieu"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_weight="1"-->
            <!--android:checked="true"-->
            <!--android:text="Một chiều" />-->

        <!--<CheckBox-->
            <!--android:id="@+id/khuhoi"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_weight="1"-->
            <!--android:checked="false"-->
            <!--android:text="Khứ hồi" />-->
    <!--</LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi chú cho tài xế: "
            android:textColor="#444"
            android:typeface="serif"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ghichu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:typeface="serif"
            android:maxLines="1"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã khuyến mãi: "
            android:textColor="#444"
            android:typeface="serif"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/makhuyenmai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:typeface="serif"
            android:maxLines="1"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center_vertical|bottom"
        android:windowSoftInputMode="adjustResize">

        <Button
            android:id="@+id/datxe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/item_button"
            android:gravity="center"
            android:text="ĐẶT XE"
            android:typeface="serif"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:windowSoftInputMode="adjustResize" />
    </LinearLayout>
</LinearLayout>
