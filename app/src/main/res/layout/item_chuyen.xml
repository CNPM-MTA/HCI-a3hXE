<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/giodi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22:00"
            android:typeface="serif"
            android:textColor="#fdcf01"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ngaydi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/1/2017"
            android:typeface="serif"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/tinhtrang_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/clock" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/diemdon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:typeface="serif"
            android:drawableLeft="@drawable/dot"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Số 1 Hoàng Đạo Thúy Thanh Xuân Hà Nội"
            android:textColor="#444"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/diemden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/map"
            android:typeface="serif"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Bưu điện tỉnh Ninh Bình TP Ninh Bình"
            android:textColor="#444"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/soluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/people"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:typeface="serif"
                android:text="x1" />

            <TextView
                android:id="@+id/gia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:typeface="serif"
                android:gravity="right|center_vertical"
                android:text="150000VND"
                android:textColor="#ef2274d7"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
