<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context="cnpm.com.xe.activities.ChiTietChuyenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:typeface="serif"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="CHUYẾN ĐI: "
            android:textColor="#444"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tinhtrang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Đang xếp chỗ"
            android:textColor="#fdcf01"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/tinhtrang_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:src="@drawable/clock" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:padding="2dp"
                android:src="@drawable/dot" />

            <TextView
                android:id="@+id/diemdon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:typeface="serif"
                android:maxLines="1"
                android:text="BigC Thăng Long 212 Trần Duy Hưng Cầu Giấy"
                android:textColor="#444"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/map" />

            <TextView
                android:id="@+id/diemden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:typeface="serif"
                android:maxLines="1"
                android:text="Bưu điện tỉnh Ninh Bình Tp Ninh Bình"
                android:textColor="#444"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="10dp"
                android:src="@drawable/mot_chieu" />

            <TextView
                android:id="@+id/kieudi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Một chiều"
                android:typeface="serif"
                android:textColor="#444"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/curPosition"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="#fff"
                android:padding="5dp"
                android:src="@drawable/time" />

            <TextView
                android:id="@+id/ngaydi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8h00 2/5/2017"
                android:typeface="serif"
                android:textColor="#444"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#ccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Loại xe "
                android:typeface="serif"
                android:textColor="#444"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/loaixe"
                android:layout_width="wrap_content"
                android:typeface="serif"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="(đi chung) 3 ghế"
                android:textColor="#444"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:typeface="serif"
                android:text="Mã vé "
                android:textColor="#444"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mave"
                android:layout_width="wrap_content"
                android:typeface="serif"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="V0003"
                android:textColor="#444"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:typeface="serif"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ghi chú: "
                android:textColor="#444"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ghichu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:typeface="serif"
                android:gravity="right"
                android:maxLines="1"
                android:text="(Không có)"
                android:textColor="#444"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#ccc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tt"
            android:typeface="serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành tiền: "
            android:textColor="#1052ed"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tt"
            android:gravity="right"
            android:typeface="serif"
            android:text="100000 VND"
            android:textColor="#1052ed"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_below="@id/tt"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="(Giá vé đã bao gồm phí cầu đường)"
            android:textSize="16sp"
            android:textStyle="italic" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="0.4"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <Button
            android:id="@+id/chinhsua"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/item_orange"
            android:text="CHỈNH SỬA"
            android:textColor="#444"
            android:typeface="serif" />

        <Button
            android:id="@+id/huychuyen"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/item_blue"
            android:text="HỦY CHUYẾN"
            android:textColor="#444"
            android:typeface="serif" />

    </LinearLayout>

</LinearLayout>
