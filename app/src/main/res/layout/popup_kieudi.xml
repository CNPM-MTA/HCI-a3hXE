<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_button"
        android:gravity="center"
        android:text="CHỌN LOẠI XE"
        android:textColor="#444"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/xe4cho"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/xe4cho"
                android:gravity="center"
                android:padding="10dp"
                android:text="Xe 4 chỗ"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc" />

            <TextView
                android:id="@+id/xe7cho"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/xe7cho"
                android:gravity="center"
                android:padding="10dp"
                android:text="Xe 7 chỗ"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc" />

            <TextView
                android:id="@+id/xe29cho"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/xe29cho"
                android:gravity="center"
                android:padding="10dp"
                android:text="Xe 29 chỗ"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc" />

            <TextView
                android:id="@+id/xe45cho"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/xe45cho"
                android:gravity="center"
                android:padding="10dp"
                android:text="Xe 45 chỗ"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>